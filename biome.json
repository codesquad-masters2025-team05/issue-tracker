{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules"]
	},
	"formatter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"overrides": [
		{
			"include": ["frontend/**/*.{js,ts,jsx,tsx,css}"],
			"javascript": {
				"formatter": {
					"quoteStyle": "single",
					"jsxQuoteStyle": "single",
					"attributePosition": "multiline"
				}
			},
			"css": {
				"formatter": {
					"quoteStyle": "single"
				}
			}
		}
	]
}
